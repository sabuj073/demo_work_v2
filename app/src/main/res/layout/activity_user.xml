<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/user_page_bg"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:srcCompat="@drawable/payment" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="User Name"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="UID"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="@+id/user_name"
        app:layout_constraintStart_toStartOf="@+id/user_name"
        app:layout_constraintTop_toBottomOf="@+id/user_name" />

    <TextView
        android:id="@+id/user_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:text="\u09F3 5000"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Availalble Balance"
        android:textSize="11sp"
        android:textColor="#DAD7D7"
        app:layout_constraintEnd_toEndOf="@+id/user_balance"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/user_balance"
        app:layout_constraintTop_toBottomOf="@+id/user_balance" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="#4C4747"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <ImageView
        android:id="@+id/recharge_icon_user"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/report_icon_user"
        app:layout_constraintEnd_toStartOf="@+id/report_icon_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/report_icon_user"
        app:srcCompat="@drawable/smartphone" />

    <TextView
        android:id="@+id/recharge_text_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Recharge"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="@+id/recharge_icon_user"
        app:layout_constraintStart_toStartOf="@+id/recharge_icon_user"
        app:layout_constraintTop_toBottomOf="@+id/recharge_icon_user" />

    <ImageView
        android:id="@+id/report_icon_user"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:layout_constraintVertical_bias="0.43"
        app:srcCompat="@drawable/report" />

    <TextView
        android:id="@+id/report_text_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Report"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="@+id/report_icon_user"
        app:layout_constraintStart_toStartOf="@+id/report_icon_user"
        app:layout_constraintTop_toBottomOf="@+id/report_icon_user" />

    <ImageView
        android:id="@+id/rocket_icon_user"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/rocket_logo" />

    <TextView
        android:id="@+id/rocket_text_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Rocket"
        app:layout_constraintEnd_toEndOf="@+id/rocket_icon_user"
        app:layout_constraintStart_toStartOf="@+id/rocket_icon_user"
        app:layout_constraintTop_toBottomOf="@+id/rocket_icon_user" />

    <ImageView
        android:id="@+id/bkash_icon_user"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/rocket_icon_user"
        app:layout_constraintEnd_toStartOf="@+id/rocket_icon_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rocket_icon_user"
        app:srcCompat="@drawable/bkash_logo" />

    <TextView
        android:id="@+id/bkash_text_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Bkash"
        app:layout_constraintEnd_toEndOf="@+id/bkash_icon_user"
        app:layout_constraintStart_toStartOf="@+id/bkash_icon_user"
        app:layout_constraintTop_toBottomOf="@+id/bkash_icon_user" />

    <ImageView
        android:id="@+id/nagad_icon_user"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/rocket_icon_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rocket_icon_user"
        app:layout_constraintTop_toTopOf="@+id/rocket_icon_user"
        app:srcCompat="@drawable/nagad_logo" />

    <TextView
        android:id="@+id/nagad_text_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Nagad"
        app:layout_constraintEnd_toEndOf="@+id/nagad_icon_user"
        app:layout_constraintStart_toStartOf="@+id/nagad_icon_user"
        app:layout_constraintTop_toBottomOf="@+id/nagad_icon_user" />

    <ImageView
        android:id="@+id/mcash_icon_user"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rocket_text_user"
        app:srcCompat="@drawable/mcash_logo" />

    <TextView
        android:id="@+id/mcash_text_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Mcach"
        app:layout_constraintEnd_toEndOf="@+id/mcash_icon_user"
        app:layout_constraintStart_toStartOf="@+id/mcash_icon_user"
        app:layout_constraintTop_toBottomOf="@+id/mcash_icon_user" />

    <ImageView
        android:id="@+id/uchas_icon_user"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/mcash_icon_user"
        app:layout_constraintEnd_toStartOf="@+id/mcash_icon_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mcash_icon_user"
        app:srcCompat="@drawable/ucash_logo" />

    <TextView
        android:id="@+id/ucach_text_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Ucash"
        app:layout_constraintEnd_toEndOf="@+id/uchas_icon_user"
        app:layout_constraintStart_toStartOf="@+id/uchas_icon_user"
        app:layout_constraintTop_toBottomOf="@+id/uchas_icon_user" />

    <ImageView
        android:id="@+id/logout_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/report_icon_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toEndOf="@+id/report_icon_user"
        app:layout_constraintTop_toTopOf="@+id/report_icon_user"
        app:srcCompat="@drawable/logout" />

    <TextView
        android:id="@+id/logout_btn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Logout"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="@+id/logout_btn"
        app:layout_constraintStart_toStartOf="@+id/logout_btn"
        app:layout_constraintTop_toBottomOf="@+id/logout_btn" />

    <ImageView
        android:id="@+id/tr_history_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/logout_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/logout_btn"
        app:layout_constraintTop_toTopOf="@+id/logout_btn"
        app:srcCompat="@drawable/history" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="TR. History"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="@+id/tr_history_icon"
        app:layout_constraintStart_toStartOf="@+id/tr_history_icon"
        app:layout_constraintTop_toBottomOf="@+id/tr_history_icon" />

    <ProgressBar
        android:id="@+id/user_activity_progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <ImageView
        android:id="@+id/userpartnotification"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="@+id/mcash_icon_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mcash_icon_user"
        app:layout_constraintTop_toTopOf="@+id/mcash_icon_user"
        app:srcCompat="@drawable/chat" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        app:layout_constraintEnd_toEndOf="@+id/userpartnotification"
        app:layout_constraintStart_toStartOf="@+id/userpartnotification"
        app:layout_constraintTop_toBottomOf="@+id/userpartnotification" />

    <TextView
        android:id="@+id/usernotificationcounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textStyle="bold"
        android:textSize="16sp"
        android:visibility="invisible"
        android:textColor="#F44336"
        app:layout_constraintBottom_toTopOf="@+id/userpartnotification"
        app:layout_constraintEnd_toEndOf="@+id/userpartnotification" />

</androidx.constraintlayout.widget.ConstraintLayout>